/* packageA/pages/wrong_pro/wrong_pro.wxss */
Page{
  background-color: black;
}

.navibar{
  width: 100%;
  height: 380rpx;
  position: fixed;
  z-index: 1;
  background-color: black;
}

.background{
  width: 100%;
  height: 1333rpx;
  z-index: 2;
}

.bg_panel{
  width: 100%;
  height: 380rpx;
  position: fixed;
  z-index: 3;
}

.title{
  position: fixed;
  z-index: 99;
  margin-top: 20%;
  margin-left: 10%;
  color: white;
  font-size: 65rpx;
  letter-spacing: 3rpx;
  font-weight: 500;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  z-index: 4;
  margin-top: 19%;
  margin-left: 80%;
  border-radius: 50%;
}

.space{
  font-size: 15rpx;
  background-color: #161616;
}

.list_panel{
  max-height: 934rpx;
  position: relative;
  z-index: 100;
  overflow: auto;
  background-color: black;
}
.list_bg{
  height: 934rpx;
  margin-top: 380rpx;
  position: relative;
  z-index: 99;
  background-color: #161616;
}

.wrongpro{
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-evenly;
  color: #aaa; 
  font-size: 38rpx;
  background-color: #161616
}
.showProblem{
  position: fixed;
  z-index:100;
  top:15%;
}
.section{
  width: 100%;
  height: 80rpx;
  position: fixed;
  z-index: 99;
  margin-top: 300rpx;
  display: flex;
  flex-direction: row;
  background-color: #00000070;
}
.section1{
  height: 80rpx;
  width: 480rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.section1_content{
  color:#aaa;
  text-align: center;
  font-size: 35rpx;
  text-indent: 30rpx
}
.section2{
  height: 80rpx;
  width: 270rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.section2_content{
  color:#aaa;
  text-align: center;
  font-size: 35rpx;
  text-indent: -20rpx;
}
.problem{
  width: 650rpx;
  margin-left: 30rpx;
  font-size: 40rpx;
}
.probleminf{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: rgba(170, 170, 170, 0.45); 
}
.problemorigin{
  width: 500rpx;
  margin-left: 30rpx;
  font-size: 35rpx;
}
.problemtime{
  width: 250rpx;
  font-size: 25rpx;
}

.sepline{
  width: 650rpx;
  height: 2rpx;
  margin-left: 50rpx;
  margin-top: 25rpx;
  background-color: #323232;
}

button[disabled]{
  background-color: #000 !important;
  color: #323232 !important;
  border-radius:0 !important;
}
