.modal-mask {
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  z-index:102;
  background: #000;
  opacity: 0.6;
}
.show-page{
    display:flex;
    align-items:center;
    justify-content:center;
    width:750rpx;
    height:100%;
}
.show-content{
  width: 80%;
  height: 1000rpx;
  background: #161616d0;
  color:#aaa;
  z-index:103;
  box-shadow: 5rpx 5rpx 20rpx 5rpx #646464;
}
.modal-title{
  font-size: 40rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.modal-body{
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  line-height: 50rpx;
}
.modal-answer {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  font-size: 35rpx;
  color: #aaa;
}


