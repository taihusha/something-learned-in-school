/* packageA/pages/component/showWrong/showWrong.wxss */
.modal-mask {
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  z-index:101;
  background: #000;
  opacity: 0.6;
}
.show-page{
    display:flex;
    align-items:center;
    justify-content:center;
    width:750rpx;
    height:100%;
}

.show-content{
  width: 85%;
  height: 1000rpx;
  background: #161616c0;
  color:#aaa;
  z-index:102;
  box-shadow: 5rpx 5rpx 20rpx 5rpx #646464;
}

.scroll{
  width: 100%;
  height: 900rpx;
  color:#aaa;
}

.modal-title{
  font-size: 40rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}
.label{
  font-size:35rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 50rpx;
}
.false{
  width: 560rpx;
  height: fit-content;
  display: flex;
  flex-direction: column;
  justify-content: left;
  margin-left: 30rpx;
  background-color: #323232;
  border-radius: 10rpx 10rpx 10rpx 10rpx / 10rpx 10rpx 10rpx 10rpx;
  border: 10rpx solid #16161600;
}
.false::after {
  border: none;
}
.true {
  width: 560rpx;
  height: fit-content;
  display: flex;
  flex-direction: column;
  justify-content: left;
  margin-left: 30rpx;
  background-color: #323232;
  border-radius: 10rpx 10rpx 10rpx 10rpx / 10rpx 10rpx 10rpx 10rpx;
  border: 10rpx solid #2dabff;
}

.buttons{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  border-top:2rpx  #646464 groove  
}
.deleteButton{
  font-size: 35rpx;
  width: 318.5rpx;
  height: 80rpx;
  margin-top: 5rpx;
  background-color: inherit;
  color: #aaa;
  border-radius: 0;
}

.confirmButton{
  font-size: 35rpx;
  width: 319rpx;
  height: 80rpx;
  margin-top: 5rpx;
  background-color: inherit;
  color: #aaa;
  border-right:2rpx #646464 groove;
  border-radius: 0;
}

.modal-body{
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  line-height: 50rpx;
}

.modal-answer {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  font-size: 35rpx;
  color: #aaa;
}

.option_space{
  height: 10rpx;
}
